---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout title="Portafolio LyT" description="Estudiante de ingeniería de sistemas">
	<div class="absolute top-7 left-5 md:left-30 lg:left-40 flex items-center space-x-4">
	  <img 
		src="Hoxy.png"
		class="rounded-full w-16 h-16"
		alt="imagen perfil"
	  />
	  <span class="flex flex-row gap-x-10 opacity-85 text-sm md:text-base font-bold">
		Liborio Andres Yara Tocarema
	  </span> 
	</div>
	
	<main class="px-4">
	  <section class="w-full mx-auto lg:w-[740px] py-36 relative flex flex-col items-center lg:items-start">
		<h1 class="typewriter text-300 text-3xl md:text-4xl lg:text-5xl font-bold flex flex-col items-center gap-x-4 pb-4 lg:pb-2 text-center max-w-full mx-auto">
		  Hola, soy Andres Yara
		</h1>
		<h2 class="text-xl font-bold lg:text-2xl max-w-[700px] text-center lg:text-center mt-4 text-black">
		  Estudiante de la Universidad de San Buenaventura, y Aprendiz autodidacta en desarrollo web y aplicaciones para dispositivos móviles de Bogotá, Colombia.
		</h2>
	  </section>
	</main>
  </Layout>
  
  