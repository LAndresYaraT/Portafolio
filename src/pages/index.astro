---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout title="Portafolio LyT" description="Estudiante de ingeniería de sistemas">
	<div class="absolute top-7 left-5 md:left-30 lg:left-40 flex items-center space-x-4">
	  <img 
		src="Hoxy.png"
		class="rounded-full w-16 h-16"
		alt="imagen perfil"
	  />
	  <span class="flex flex-row gap-x-10 opacity-85 text-sm md:text-base">
		Liborio Andres Yara Tocarema
	  </span> 
	</div>
	
	<main class="px-4">
	  <section class="w-full mx-auto lg:w-[740px] py-36 relative flex flex-col items-center lg:items-start">
		<h1 class="typewriter text-purple-300 text-3xl md:text-4xl lg:text-5xl font-bold flex flex-col items-center gap-x-4 pb-4 lg:pb-2 text-center max-w-full mx-auto">
		  Hola, soy Andres Yara
		  <Badge className="bg-purple-700 text-green-800 dark:bg-blue-700 dark:text-red-50">
			Abierto a ideas de desarrollo
		  </Badge>
		</h1>
		<h2 class="text-xl lg:text-2xl max-w-[700px] text-center lg:text-center mt-4 text-pink-100/90">
		  <span class="text-pink-400">Estudiante de la Universidad de San Buenaventura,</span> y Aprendiz autodidacta en <span class="text-violet-400">desarrollo web y aplicaciones para dispositivos móviles</span> de Bogotá, Colombia.
		</h2>
		<h3 class="typewriter text-red-300 text-2xl md:text-2xl lg:text-2xl font-bold flex flex-col items-center gap-x-2 pb-2 lg:pb-2 mt-14 text-center max-w-full mx-auto">
		  Portafolio en Progreso
		</h3>
		<span class="text-pink-100/90 text-ls mt-1 text-center lg:text-center max-w-full lg:max-w-[740px] typewriter">
		  Estoy trabajando en nuevos proyectos, los cuales estarán disponibles pronto.<span class="text-pink-400">¡Mantente atento!</span>
		</span>
	  </section>
	</main>
  </Layout>
  
  